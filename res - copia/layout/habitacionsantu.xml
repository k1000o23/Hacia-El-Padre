<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panel_a_lo_largo_del_dia"
    tools:context="sch_project.apk_01.apendice.exorcismos">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/vannegrita"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="Mi habitación es tu santuario"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textSize="@dimen/titulo"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52" />

    <ScrollView
        android:id="@+id/scroll"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:scrollbars="vertical"

        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/vannormal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Mi habitación es tu santuario,\n donde actúas para gloria del Padre.\n Allí él transforma todo mi ser\n en tabernáculo predilecto de la Trinidad, \n donde siempre arde una lámpara perpetua \n y nunca se apaga el fuego del amor; \n donde, por sacrificio tras sacrificio,\n se expulsa del corazón el egoísmo; \n donde rosas adornan el altar\n y azucenas florecen siempre de nuevo; \n donde se siente una atmósfera de paraíso, \n que eleva el corazón y el pensamiento;\n donde, al igual que en la eterna Ciudad de Sión, \n el espíritu del mundo no tiene cabida;\n donde reina la paz y sonríe la alegría, \n pues el ángel de Dios custodia vigilante; \n donde Cristo domina y triunfa\n y conduce todo el mundo hacia el Padre. \nAmén."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:paddingBottom="5dp"
            android:textColor="@color/texto"
            android:textSize="@dimen/texto"
            android:textStyle="bold" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>

