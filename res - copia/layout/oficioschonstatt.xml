<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:background="@drawable/panel_a_lo_largo_del_dia"

tools:context="sch_project.apk_01.apendice.exorcismos">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="3"
            android:shadowDy="2"
            android:shadowRadius="1.8"
            android:layout_marginTop="24dp"
            android:text="Oficio de Schoenstatt"
            android:textAlignment="center"
            android:fontFamily="@font/vannegrita"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/oracion_inicial"
            android:layout_weight="1"
            android:text="Oracion inicial"
            android:textSize="20sp"
            android:color="#F5D0A9"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:onClick="click_oracion_inicial"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:id="@+id/maitines"
            android:gravity="center"
            android:text="Maitines"
            android:layout_weight="1"
            android:onClick="click_maitines"
            android:textSize="15sp"
            android:color="#e9b075"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/laudes"
            android:gravity="center"
            android:text="Laudes"
            android:layout_weight="1"
            android:onClick="click_laudes"
            android:textSize="15sp"
            android:color="#e9b075"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/prima"
            android:text="Prima"
            android:gravity="center"
            android:textSize="15sp"
            android:color="#e9b075"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:onClick="click_prima"
            android:layout_weight="1"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/tercia"
            android:text="Tercia"
            android:gravity="center"
            android:onClick="click_tercia"
            android:textSize="15sp"
            android:color="#dc954b"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:layout_weight="1"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/sexta"
            android:text="Sexta"
            android:gravity="center"
            android:textSize="15sp"
            android:color="#dc954b"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:layout_weight="1"
            android:onClick="click_sexta"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/nona"
            android:text="Nona"
            android:gravity="center"
            android:textSize="15sp"
            android:onClick="click_nona"
            android:color="#dc954b"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:layout_weight="1"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/visperas"
            android:text="Vísperas"
            android:onClick="click_visperas"
            android:gravity="center"
            android:color="#e9b075"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:layout_weight="1"
            android:textSize="15sp"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:id="@+id/completas"
            android:text="Completas"
            android:onClick="click_completas"
            android:color="#e9b075"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_weight="1"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/oracion_final"
            android:text="Oración final"
            android:onClick="click_oracion_final"
            android:color="#F5D0A9"
            android:radius="60dip"
            android:backgroundTintMode="screen"
            android:textSize="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/vannormal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>


</LinearLayout>
