    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/vannegrita"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="\nPetición"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textSize="@dimen/titulo"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="112dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/vannormal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text=" Danos reposo en tu protección;\n sé para nosotros escudo y defensa potente\n en contra del dominio de instintos y sentimientos, \n y de las argucias de Satanás.\n \n Con el amor que ti nace, \n colma mi alta hasta lo hondo;  \n así viva únicamente para la Obra \n que alza al mundo hacia ti.\n \n Que mañana nos levantemos sanos y renovados\n a la hora señalada,\n para consagrarte con generosa servicialidad \n nuestra fuerza y nuestro tiempo. \n Madre, inscríbenos en tu corazón\n y llévanos contigo al cielo.\n La Alianza, que sellamos en una hora de gracias, \n la renovamos ahora con fidelidad."
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/texto"
            android:textSize="@dimen/texto"
            android:textStyle="bold" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>


