    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/vannegrita"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="\nOraciones apostólicas"
        android:textAlignment="center"
        android:textColor="@color/titulo"
        android:textSize="@dimen/titulo"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="112dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/vannormal"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Madre, con tu Hijo Divino\n desciende a los caminos de nuestra patria \n para que, siguiendo vuestras huellas, \n encuentre la paz\n verdadera y estable.\n Patria, sólo tendrás salvación \n si, en amor, te unes\n a María y a su Hijo.\n Amén. "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/texto"
            android:textSize="@dimen/texto"
            android:textStyle="bold" />
    </ScrollView>

</android.support.constraint.ConstraintLayout>





