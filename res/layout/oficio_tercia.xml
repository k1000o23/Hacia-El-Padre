<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/panel_a_lo_largo_del_dia"
    android:orientation="vertical"
    tools:context="sch_project.apk_01.apendice.exorcismos"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/laudes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/vannormal"
        android:gravity="center"
        android:onClick="click_prima"
        android:text="&lt;&lt;  Prima"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/menu_oficio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/vannormal"
        android:gravity="center"
        android:onClick="click_menu_oficio"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/prima"
        app:layout_constraintStart_toEndOf="@+id/laudes"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/prima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/vannormal"
        android:gravity="center"
        android:onClick="click_sexta"
        android:text="Sexta   &gt;&gt;"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="114dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_oficio"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/vannormal"
            android:paddingBottom="5dp"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="(Nueve de la mañana)\n\n Tu santuario irradia sobre nuestro tiempo\n los resplandores y la gloria del Sol del tabor.\n \n Donde se manifiesta con claridad el Sol del Cristo\n y, como en el Tabor, \n traza un recorrido victorioso; \n allí es bueno estarse,\n allí se está como en el Paraíso,\n pues el espíritu Santo ha establecido su morada.\n \n Vaso entregado al Espíritu de Santidad,\n envuelta enteramente\n por el Sol resplandeciente del Tabor, \n actúas en Schoenstatt,\n bondadosa Medianera,\n guiándonos hacia el Espíritu Santo.\n \n Haz que el Espíritu de Cristo\n nos penetre hondamente; \n en abundancia obséquianos\n con elocuentes lenguas de amor,\n para que, a semejanza tuya, Espejo de Justicia, \n brille a través de nosotros el resplandor de Cristo.\n \n El universo entero\n con gozo glorifique al Padre, \n le tribute honra y alabanza \n por Cristo, con María,\n en el Espíritu Santo,\n ahora y por los siglos de los siglos.\n Amén."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#3d3b3b"
            android:textSize="@dimen/texto"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp" />
    </ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/vannegrita"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="3"
        android:shadowDy="2"
        android:shadowRadius="1.8"
        android:text="Tercia"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/titulo"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="14dp" />

</android.support.constraint.ConstraintLayout>

